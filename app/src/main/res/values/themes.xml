<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Onibus_rn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4682B4</item>
        <item name="colorPrimaryVariant">#4682B4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff706a</item>
        <item name="colorSecondaryVariant">#01C7D2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Tema aplicado à página do termo de uso-->
    <style name="termoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryTermo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTermo</item>
        <item name="colorAccent">@color/colorAccentTermo</item>

    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="Theme.Onibus_rn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Onibus_rn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Onibus_rn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>